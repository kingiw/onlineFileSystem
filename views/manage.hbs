

<table class="ui selectable striped table">
   <thead>
    <tr>
       <th colspan="3"><span id="currentpath">{{currentPath}}</span><span id="dir_id">{{dir_id}}</span></th>
  </tr></thead>
{{#if list}}
  <tbody>
   {{#each list}}
      <tr>
         <td>
            {{this.user}}
         </td>
         <td>
            {{this.authority}}
         </td>
      </tr>
   {{/each}}
{{else}}
   <tbody>
      <tr>
         <td>Noone has authority to access to this directory.</td>
      </tr>
   </tbody>
{{/if}}
   <tr id="newdirtr" style="display:none;">
      <td>
         <div class="ui mini input">
            <input id="newdirname" type="text" placeholder="Name...">
         </div>
         <i class="check icon" id="mkdirconfirm"></i>
         <i class="close icon" id="mkdircancel"></i></td>
      <td></td>
      <td></td>
   </tr>
  </tbody>
</table>

<button class="ui primary basic button" id="share">Share</button>
<div class="sharemodal">
   <div class="ui mini input">
      <input id="targetuser" type="text" placeholder="Username...">
   </div>
   <div class="ui selection dropdown" id="authorityDropdown">
      <input type="hidden" name="authority">
      <i class="dropdown icon"></i>
      <div class="default text">Authority</div>
      <div class="menu">
         <div class="item" data-value="1">Read Only</div>
         <div class="item" data-value="2">Writable</div>
      </div>
   </div>
   <button class="ui primary basic button" id="shareconfimr">Confirm</button>
</div>
<form action="/upload" method="POST" enctype="multipart/form-data">
    <input id="fileinput" type="file" name="file" style="display:none;">
    <input type="hidden" name="path" value="{{currentPath}}" style="display:none">
    <input id="doupload" type="submit" value="Upload" style="display:none;">
</form>